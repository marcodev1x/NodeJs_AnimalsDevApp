{{>partials/header}}

{{#banner}}
<section class="banner" style="background-image: url('/images/{{banner.background}}')">{{title}}</section>
{{#verifier}}<h2>{{banner.title}} disponíveis para adoção</h2>{{/verifier}}
{{/banner}}

<div class="container list">
{{#list}}
   <div class="item">
        <img src="images/{{ image }}" class="item--image" />
        <div class="item--name">{{ name }}</div>
        <div class="item--color">{{ color }}</div>
        <div class="item--genre">Gênero: {{ sex }}</div>
    </div>
{{/list}}
</div>

{{>partials/footer}}